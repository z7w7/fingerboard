{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist", // 输出目录
    "sourceMap": false, // 是否生成sourceMap
    "jsx": "react",
    "target": "esnext", // 编译目标
    "module": "esnext", // 模块类型
    "moduleResolution": "node",
    "noImplicitAny": false, // 是否允许出现隐式的any类型
    "allowJs": false, // 是否编辑js文件
    "strict": true, // 严格模式
    "noUnusedLocals": true, // 未使用变量报错
    "experimentalDecorators": true, // 启动装饰器
    "resolveJsonModule": true, // 加载json
    "esModuleInterop": true, // 支持在esm中对cjs/amd/umd使用默认导入，如：import React from 'react'
    "removeComments": true, // 删除注释
    "declaration": true, // 生成定义文件
    "declarationMap": false, // 生成定义sourceMap
    "lib": ["esnext", "dom"] // 导入库类型定义
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
